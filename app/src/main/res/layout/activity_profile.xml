<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:context=".Home">

    <!-- Title TextView with Improved Style -->
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Title 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333" />

    <!-- Subtitle TextView with Improved Style -->
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="8dp"
        android:text="Subtitle 1"
        android:textSize="18sp"
        android:textColor="#666" />

    <!-- Additional TextView with Improved Style -->
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv2"
        android:text="Detail 1"
        android:textSize="18sp"
        android:textColor="#666" />

    <!-- Additional TextView with Improved Style -->
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv3"
        android:layout_marginTop="8dp"
        android:text="Detail 2"
        android:textSize="18sp"
        android:textColor="#666" />

    <!-- Additional TextView with Improved Style -->
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv4"
        android:layout_marginTop="8dp"
        android:text="Detail 3"
        android:textSize="18sp"
        android:textColor="#666" />

    <!-- Additional TextView with Improved Style -->
    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv5"
        android:text="Detail 4"
        android:textSize="18sp"
        android:textColor="#666" />

    <!-- Button with Improved Style -->
    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv6"
        android:layout_marginTop="20dp"
        android:text="Change"
        android:padding="12dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFF"
        android:textSize="18sp" />
</RelativeLayout>
